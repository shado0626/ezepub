{
  "name": "ezepub",
  "version": "0.0.1",
  "description": "Write ePub Books from your code editor",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "start": "ts-node-dev --poll src/index.ts",
    "test": "jest --watchAll --no-cache --runInBand --detectOpenHandles",
    "clean": "del-cli ./build/*",
    "build": "npm run clean && tsc"
  },
  "keywords": [
    "epub"
  ],
  "author": "Sherin Binu <sherinbinu@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.4.10",
    "del-cli": "^4.0.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "ts-node-dev": "^1.1.8"
  }
}
